# ============================================
# ThreatLens AI - Environment Configuration
# ============================================

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_ZOOKEEPER=localhost:2181
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_GROUP_ID=threatlens-consumers

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=threatlens-evidence
MINIO_SECURE=false

# Elasticsearch
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PREFIX=threatlens

# TimescaleDB (PostgreSQL)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=threatlens
TIMESCALE_USER=threatlens
TIMESCALE_PASSWORD=threatlens



# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Neo4j (Causal Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# Blockchain (Polygon Mumbai Testnet)
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
EVIDENCE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# LLM Copilot (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# Detection Thresholds
ANOMALY_THRESHOLD_NETWORK=70.0
ANOMALY_THRESHOLD_CAMERA=75.0
ANOMALY_THRESHOLD_RF=80.0
ANOMALY_THRESHOLD_LOG=65.0
ANOMALY_THRESHOLD_FILE=85.0

# Behavioral DNA Settings
DNA_BASELINE_WINDOW_HOURS=168  # 1 week
DNA_UPDATE_INTERVAL_MINUTES=15
DNA_DEVIATION_THRESHOLD=2.5  # z-score threshold

# Correlation Settings
CORRELATION_TIME_WINDOW_SECONDS=300  # 5 minutes
MIN_EVENTS_FOR_INCIDENT=2
RISK_SCORE_THRESHOLD=70.0

# Sandbox Settings
SANDBOX_TIMEOUT_SECONDS=300
SANDBOX_NETWORK_ISOLATED=true
SANDBOX_MAX_CONCURRENT=3

# Video Processing
CAMERA_FPS=5  # Process 5 frames per second
VIDEO_RETENTION_DAYS=30
ANNOTATED_FRAME_QUALITY=85

# File Monitoring
FILE_WATCH_PATHS=/opt/critical,/etc/shadow,/var/www
FILE_HASH_ALGORITHM=sha256

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/threatlens/app.log